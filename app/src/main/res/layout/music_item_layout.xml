<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dip">
    <ImageView
        android:id="@+id/music_item_icon"
        android:layout_marginLeft="5dip"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_centerVertical="true"
        android:src="@drawable/video_default_icon"/>
    <TextView
        android:id="@+id/music_item_name"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="3dip"
        android:layout_toRightOf="@+id/music_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/music_name"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/music_item_duration"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="5dip"
        android:layout_toRightOf="@+id/music_item_icon"
        android:layout_below="@+id/music_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="@string/music_duration"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/music_item_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="@string/music_size"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/white"/>
    <View
        android:background="@color/white_light"
        android:layout_width="match_parent"
        android:layout_height="0.2dip"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        />

</RelativeLayout>
